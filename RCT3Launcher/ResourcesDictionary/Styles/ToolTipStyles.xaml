<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="{x:Type ToolTip}" TargetType="{x:Type ToolTip}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Border MaxWidth="600" MinHeight="16" MaxHeight="320" Padding="5,5,5,5" CornerRadius="8" BorderBrush="{StaticResource Theme.Primary.Dark.Background.SolidColorBrush}" Background="{StaticResource Theme.Secondary.Dark.SolidColorBrush}" BorderThickness="2">
						<TextBlock Foreground="{StaticResource Theme.Primary.Text}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{TemplateBinding ContentControl.Content}"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>