<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Storyboard x:Key="Exit_Button_Mouse_Enter">
		<ColorAnimation From="#00E81123" To="#FFE81123" Duration="0:0:0.3" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"/>
	</Storyboard>
	<Storyboard x:Key="Exit_Button_Mouse_Leave">
		<ColorAnimation From="#FFE81123" To="#00E81123" Duration="0:0:0.3" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"/>
	</Storyboard>
</ResourceDictionary>